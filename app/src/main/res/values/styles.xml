<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="morphButtonStyle">@style/Widget.MorphButton</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
    </style>
    <style name="main_list">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">#F5F5F5</item>
    </style>
    <style name="main_item_title">
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">8dp</item>
    </style>
    <style name="main_item_button">
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>

    </style>
    <style name="main_category_title">
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#D9BA88</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="main_and_action_item_title">
        <item name="android:background">@color/item_color</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="main_and_action_item_card">
        <item name="android:layout_marginBottom">1dp</item>
    </style>
    <style name="main_and_action_item_title_text_view">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="main_item_description">
        <item name="android:background">@color/item_description_background</item>
        <item name="android:padding">6dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="service_fragment_text_view">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="service_fragment_text_view_background">
        <item name="android:background">@color/item_color</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>
    <style name="service_detail_item_title_text_view">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>
    <style name="service_detail_description">
        <item name="android:background">@color/item_description_background</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="service_detail_button_bar">
        <item name="android:background">@color/item_description_background</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="tablayout_text_appearacnce" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse" >
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">5sp</item>
    </style>

    <style name="deal_fragment_text_view">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@color/item_color</item>
    </style>
    <style name="deal_recycle_title_text_view">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="deal_recycle_date_text_view">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="main_fragment_title">
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/title_background</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>