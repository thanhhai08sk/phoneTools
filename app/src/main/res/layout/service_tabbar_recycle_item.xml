<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/service_fragment_background"
    android:orientation="vertical">


    <TextView
        android:id="@+id/service_tabbar_recycle_item_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/service_item_title_background"
        style="@style/service_detail_item_title_text_view"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/service_tabbar_recycle_item_detail"
        android:visibility="gone"
        style="@style/service_detail_description"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/service_tabbar_recycle_item_buttons"
        android:visibility="gone"
        style="@style/service_detail_button_bar"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/service_tabbar_recycle_item_button_1"
            android:text="@string/service_tabbar_recycle_item_button_dang_ky"
            style="?android:attr/buttonBarButtonStyle"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/service_tabbar_recycle_item_button_2"
            android:text="@string/service_tabbar_recycle_item_button_huy_dich_vu"
            style="?android:attr/buttonBarButtonStyle"
            />
    </LinearLayout>


</LinearLayout>
